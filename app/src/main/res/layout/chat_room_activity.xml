<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/textbox_design"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30px"
        android:paddingBottom="30px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_room_profile_image"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:padding="5dp"
            android:src="@drawable/man"
            android:layout_marginLeft="5dp"
            app:civ_border_color="#C4C4C4"
            app:civ_border_width="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatRoomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chatRoomTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전 12:00"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatRoomMessage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Message"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/chatRoomReadCnt"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/namugodicl"
                android:gravity="center"
                android:background="@drawable/button_round"
                android:backgroundTint="#FF3300"
                android:textColor="@color/white"
                android:text="1개"
                android:visibility="invisible"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>