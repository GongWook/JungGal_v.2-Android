<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/reveiw_alarm_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:text="X"
            android:textSize="12dp"
            android:gravity="right"/>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/response_alarm_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:src="@drawable/review_custom" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/reviewAlarmTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리뷰 작성 어떠세요?"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reviewAlarmMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Message"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/reviewAlarmTime"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:gravity="right"
            />

        <Button
            android:id="@+id/review_btn"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginRight="110dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:text="리뷰 작성"
            android:textSize="20dp"
            android:backgroundTint="#FFC000"
            android:fontFamily="@font/namugodicl"
            android:layout_marginBottom="20dp"/>


        <View
            android:layout_marginTop="10dp"
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="1px"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>