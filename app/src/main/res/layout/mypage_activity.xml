<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/myPageBackBtn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="0.2"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_icon_custom" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="마이페이지"
            android:textColor="@color/black"
            android:fontFamily="@font/namugodicl"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginRight="45dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myPageUserProfile"
            android:layout_width="124dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"

            android:padding="5dp"
            android:src="@drawable/man"
            app:civ_border_color="#C4C4C4"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myPageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/namugodicl"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart_custom"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/myPagePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0.0"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <Button
                android:id="@+id/myPageChangeProfileBtn"
                android:layout_width="170dp"
                android:layout_height="37dp"
                android:text="프로필 수정하기"
                android:textSize="17dp"
                android:backgroundTint="#FFC000"
                android:fontFamily="@font/namugodicl"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:textSize="19dp"
            android:text="나의 나눔 내역"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:text="나눔 받은 내역"
            android:textSize="19dp"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:text="판매 실적"
            android:textSize="19dp"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:layout_marginTop="15dp"
            android:text="1대1 문의하기"
            android:textSize="19dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:text="자주 묻는 질문"
            android:layout_marginTop="15dp"
            android:textSize="19dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:text="탈퇴하기"
            android:layout_marginTop="15dp"
            android:textSize="19dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:text="로그아웃"
            android:layout_marginTop="15dp"
            android:textSize="19dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_light" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sellerRegistBtn"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="판매자 등록"
                android:textSize="17dp"
                android:backgroundTint="#FFC000"
                android:fontFamily="@font/namugodicl"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:elevation="0dp"
                />

            <ImageView
                android:id="@+id/sellerBadge"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:layout_gravity="center|right"
                android:src="@drawable/business_check_custom"
                android:elevation="2dp"
                android:visibility="invisible"/>


        </FrameLayout>

    </LinearLayout>

</LinearLayout>