<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:padding="13dp">


        <ImageView
            android:id="@+id/chatRoomListBackBtn"
            android:layout_width="28dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/back_space_custom" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/chat_custom" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRoomRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginTop="10dp"
        custom:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/chat_food_share_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/chat_home_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:src="@drawable/chat" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:src="@drawable/user" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView19"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="나눔"
            android:fontFamily="@font/namugodicl"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="판매"
            android:fontFamily="@font/namugodicl"
            android:gravity="center"
            android:paddingRight="7dp"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="홈"
            android:fontFamily="@font/namugodicl"
            android:gravity="center"
            android:paddingRight="2dp"/>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="채 팅"
            android:fontFamily="@font/namugodicl"
            android:gravity="center"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="마이페이지"
            android:fontFamily="@font/namugodicl"
            android:gravity="center"
            android:paddingRight="13dp"/>
    </LinearLayout>


</LinearLayout>