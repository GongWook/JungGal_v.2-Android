<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/noti_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:src="@drawable/sharing_custom" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/AcceptAlarmTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나눔 신청을 받아주세요!"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AcceptAlarmMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Message"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/AlarmAcceptBtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/namugodicl"
                android:textSize="15dp"
                android:text="수락"
                android:backgroundTint="#FFC000"
                />

            <Button
                android:id="@+id/AlarmDenyBtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/namugodicl"
                android:textSize="15dp"
                android:text="거절"
                android:backgroundTint="#FFC000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/AcceptAlarmTime"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:gravity="right"
            />


        <View
            android:layout_marginTop="10dp"
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="1px"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>