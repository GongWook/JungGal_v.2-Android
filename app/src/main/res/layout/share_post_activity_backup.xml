<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/back_icon_custom" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/namugodicl"
            android:textSize="25dp"
            android:gravity="center"
            android:text="&lt; 콩자반 &gt;"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/namugodicl"
            android:textSize="25dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="30dp"
            android:text="X" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="174dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:src="@drawable/man" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:src="@drawable/man" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:src="@drawable/man"  />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_marginTop="5dp"
            android:layout_width="145dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/man" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/namugodicl"
                    android:textSize="15dp"
                    android:text="TextView"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="21dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/alaram_button"
                    android:text="알림 받기"
                    android:layout_marginRight="10dp"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/namugodicl"
                android:textSize="15dp"
                android:text="TextView"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/r_line"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="0.7dp"
        android:background="#B4B4B4" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:fontFamily="@font/namugodicl"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <View
        android:id="@+id/r_line2"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="0.7dp"
        android:background="#B4B4B4"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/namugodicl"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:text="남은 시간 : 00시간 00분" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/namugodicl"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="나눔 가능 인원 수 : 00명" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:fontFamily="@font/namugodicl"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="0 / 2" />

    </LinearLayout>

    <View
        android:id="@+id/r_line3"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="0.7dp"
        android:background="#B4B4B4"
        android:layout_marginBottom="10dp"/>



    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/flower_custom" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/namugodicl"
                android:gravity="center"
                android:text="신청하기" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageButton4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/location_pin_custom" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/namugodicl"
                android:gravity="center"
                android:text="경로안내" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/chat_ballon_custom" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/namugodicl"
                android:gravity="center"
                android:text="경로안내" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/rating_custom" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/namugodicl"
                android:gravity="center"
                android:text="경로안내" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>