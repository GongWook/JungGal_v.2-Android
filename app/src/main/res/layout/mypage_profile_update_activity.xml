<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myPageBackBtn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="0.2"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_icon_custom" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="프로필 변경"
            android:textColor="@color/black"
            android:fontFamily="@font/namugodicl"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginRight="45dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/myPageProfileResetBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="x"
                    android:background="@drawable/round_button"
                    android:layout_gravity="right"/>

                <ImageView
                    android:id="@+id/mypageUpdateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:src="@drawable/man" />

                <Button
                    android:id="@+id/myPageUpdateProfileBtn"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#FCC000"
                    android:fontFamily="@font/namugodicl"
                    android:layout_marginTop="40dp"
                    android:text="프로필" />
            </FrameLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/myPageUpdateName"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:fontFamily="@font/namugodicl"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:enabled="false"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/myPageUpdateIntroduce"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ex) 안녕하세요 !\n정갈 개발자 입니다."
        android:background="@drawable/textbox_design"
        android:paddingTop="20dp"
        android:gravity="start"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:fontFamily="@font/namugodicl"/>

    <Button
        android:id="@+id/myProfileUpdateSubmitBtn"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:backgroundTint="#FFC000"
        android:layout_gravity="center"
        android:text="프로필 변경"
        android:textSize="17dp"
        android:fontFamily="@font/namugodicl"
        android:layout_marginTop="60dp"/>

</LinearLayout>