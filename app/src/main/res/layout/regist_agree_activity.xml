<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="환영합니다!"
        android:fontFamily="@font/namugodicl"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:letterSpacing="0.03"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:text="정갈 사용에 앞서 회원가입을\n부탁드리겠습니다."
        android:fontFamily="@font/namugodicl"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:letterSpacing="0.03"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>

    <CheckBox
        android:id="@+id/all_agree_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전체동의"
        android:textSize="15dp"
        android:buttonTint="#FFC000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( 필수 ) 개인정보 수집 및 이용             >"
            android:fontFamily="@font/namugodicl"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:letterSpacing="0.03"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( 필수 ) 개인 정보처리 방침                 >"
            android:fontFamily="@font/namugodicl"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:letterSpacing="0.03"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( 필수 ) 정갈 서비스 이용약관              >"
            android:fontFamily="@font/namugodicl"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:letterSpacing="0.03"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( 필수 ) 위치정보 수집 및 이용             >"
            android:fontFamily="@font/namugodicl"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:letterSpacing="0.03"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( 필수 ) 전자금융거래 이용약관 동의     >"
            android:fontFamily="@font/namugodicl"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:letterSpacing="0.03"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="만 14세 이상 이신가요?"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:buttonTint="#FFC000"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:paddingTop="20dp">


            <RadioButton
                android:id="@+id/yes_radio"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:buttonTint="#FFC000"
                android:text="  예"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/namugodicl"/>

            <RadioButton
                android:id="@+id/no_radio"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:buttonTint="#FFC000"
                android:text="아니요"
                android:fontFamily="@font/namugodicl"/>


    </RadioGroup>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:backgroundTint="#FFC000"
        android:layout_gravity="center"
        android:text="다음으로" />

</LinearLayout>